<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="mainPane" fx:controller="demo.installer.BasePanel"
            minHeight="180" minWidth="180" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <AnchorPane fx:id="anchor" prefHeight="70.0" prefWidth="200.0" BorderPane.alignment="CENTER">
