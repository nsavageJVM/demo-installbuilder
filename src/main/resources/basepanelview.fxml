            </children>
        </AnchorPane>
    </top>
    <center>
        <HBox fx:id="mainHBox" maxWidth="1.7976931348623157E308">
            <children>
                <Label id="mainView" fx:id="mainView" alignment="CENTER" text="Demo App" textAlignment="CENTER"
                       style="-fx-font-size:48; -fx-text-fill:blue;">
                 <HBox.margin>
                     <Insets left="40.0" right="10.0" top="40.0" />
                 </HBox.margin>

                </Label>
            </children>
        </HBox>
    </center>
</BorderPane>
